# ============================================
# PM Agent - Environment Variables
# Copy this to .env and fill in your values
# ============================================

# --- LLM Providers ---
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# --- LangSmith Observability ---
LANGSMITH_API_KEY=lsv2_...
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=pm-agent

# --- Opik Observability ---
OPIK_API_KEY=your-opik-api-key
OPIK_WORKSPACE=default
OPIK_PROJECT_NAME=pm-agent

# --- Slack ---
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=...
SLACK_APP_TOKEN=xapp-...

# --- Jira ---
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USER_EMAIL=you@company.com
JIRA_API_TOKEN=...
JIRA_PROJECT_KEYS=PROD,SUPPORT,BUGS

# --- Notion ---
NOTION_API_KEY=secret_...
NOTION_ROADMAP_DB_ID=...
NOTION_REPORTS_PAGE_ID=...

# --- GitHub ---
GITHUB_TOKEN=ghp_...
GITHUB_REPOS=org/repo1,org/repo2

# --- Tavily (Web Search) ---
TAVILY_API_KEY=tvly-...

# --- WhatsApp (Meta Cloud API) ---
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_ACCESS_TOKEN=EAAx...
WHATSAPP_VERIFY_TOKEN=your-chosen-verify-string
WHATSAPP_RECIPIENT_PHONE=1234567890

# --- Email (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=you@gmail.com
SMTP_PASSWORD=xxxx-xxxx-xxxx-xxxx
SMTP_FROM_EMAIL=you@gmail.com
EMAIL_RECIPIENT=you@gmail.com

# --- Reddit ---
REDDIT_CLIENT_ID=...
REDDIT_CLIENT_SECRET=...
REDDIT_USER_AGENT=pm-agent/1.0

# --- Database (Checkpointer) ---
POSTGRES_URI=postgresql://user:password@localhost:5432/pmagent
# Fallback to SQLite for local dev:
SQLITE_PATH=./checkpoints.db

# --- Scheduler ---
DAILY_DIGEST_CRON=0 6 * * *
WEEKLY_SCAN_CRON=0 8 * * 1
TIMEZONE=Europe/Madrid

# --- Server ---
API_HOST=0.0.0.0
API_PORT=8000
API_AUTH_TOKEN=your-secret-api-token

# --- Alert Channels ---
SLACK_ALERT_CHANNEL=#pm-alerts
SLACK_SUMMARY_CHANNEL=#product
